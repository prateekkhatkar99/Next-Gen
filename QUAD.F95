!QUADRATIC EQUATION
PROGRAM QUAD
IMPLICIT NONE
REAL :: A,B,C,D,X,Y,Xr

PRINT*,"ENTER THE QUADRATIC COEFFICIENT OF FORM AX2+BX+C"
READ*,A,B,C
D=B**2-(4*A*C)
FIRST:IF(D>0) THEN
X=(B/(2*A))+SQRT(D)/(2*A)
Y=(B/(2*A))-SQRT(D)/(2*A)
PRINT*,"ROOTS ARE UNEQUAL"
PRINT*,X
PRINT*,Y
ELSE IF(D==0) THEN
X=B/(2*A)
Y=X
PRINT*,"ROOTS ARE EQUAL"
PRINT*,X
PRINT*,Y
ELSE
Xr=B/(2*A)
X=SQRT(-D)/(2*A)
Y=-SQRT(-D)/(2*A)
PRINT*,"ROOTS ARE IMAGINARY"
PRINT*,cmplx(Xr,X)
PRINT*,cmplx(Xr,Y)
END IF FIRST

END PROGRAM QUAD
