!sine series
PROGRAM SERIES
IMPLICIT NONE

REAL :: X,SU=0
INTEGER :: N,I,F,J,P

PRINT*,"ENTER N TERMS AND X OF SIN(X) IN RADIANS"
READ*,N,X
ILOOP:DO I=0,N
P=2*I+1
F=1
  JLOOP:DO J=1,P
  F=F*J
  END DO JLOOP
PRINT*,"FACTORIAL=",F
SU=SU+(X**(P)*((-1)**I))/F
PRINT*,"SUM=SUM+(X**(P)*((-1)**I))/F  SUM=",SU
END DO ILOOP
PRINT*,"SIN(X)=",SU
END PROGRAM SERIES
